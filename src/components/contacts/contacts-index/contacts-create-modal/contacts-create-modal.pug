div
    v-btn(fab dark color="green" @click.stop="dialog = true")
        v-icon(dark) add
    
    v-dialog(v-model="dialog" persistent max-width="600px")
        v-card
            v-form(@submit.prevent="addUser" lazy-validation ref="form" v-model="valid")
                v-card-title
                    v-icon(large left) add_circle_outline
                    span.headline Add New Contact
                v-divider
                v-card-text
                    v-container(grid-list-md)
                        v-layout(wrap)
                            v-flex(lg6 sm12)
                                v-text-field(label="First Name" v-model="contact.first_name" :rules="nameRules" prepend-inner-icon="account_box")
                            v-flex(lg6 sm12)
                                v-text-field(label="Last Name" v-model="contact.last_name" :rules="nameRules" prepend-inner-icon="account_box")
                            v-flex(xs12)
                                v-text-field(label="Email Address" v-model="contact.email" :rules="emailRules" prepend-inner-icon="alternate_email")
                v-divider
                v-card-actions
                    v-spacer
                    v-btn(color="blue darken-1" @click="closeDialog") Close
                    v-btn(color="green" type="submit" :disabled="!valid") Save