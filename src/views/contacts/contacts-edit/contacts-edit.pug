div
    v-container(grid-list-xl)
        v-layout(row wrap justify-center align-center)
            v-flex(md8 sm12)
                v-card(v-if="contact")
                    v-card-title
                        v-btn(icon fab dark color="warning" small @click="goBack")
                            v-icon arrow_back
                    v-divider
                    v-form(@submit.prevent="saveContact" v-model="valid" ref="form")
                        v-card-text
                            v-container(grid-list-md fluid)
                                v-layout(row wrap)
                                    v-flex(lg6 sm12)
                                        v-text-field(label="First Name" v-model="contact.first_name" :rules="nameRules" prepend-inner-icon="account_box")
                                    v-flex(lg6 sm12)
                                        v-text-field(label="Last Name" v-model="contact.last_name" :rules="nameRules" prepend-inner-icon="account_box")
                                    v-flex(lg12)
                                        v-text-field(label="Email" v-model="contact.email" :rules="emailRules" prepend-inner-icon="alternate_email")
                        v-divider
                        v-card-actions
                            v-spacer
                            v-btn(type="submit" color="success") Save
